{
  "name": "shampoo",
  "productName": "Shampoo - Plugin Cleaner",
  "description": "An application for cleaning Bethesda plugin files.",
  "version": "0.0.1",
  "author": "Mator",
  "copyright": "Â© 2017, Mator",
  "repository": "https://github.com/matortheeternal/shampoo",
  "license": "MIT",
  "main": "app/background.js",
  "build": {
    "appId": "com.mator.shampoo",
    "files": [
      "app/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraFiles": [
      "XEditLib.dll",
      "*.dat"
    ]
  },
  "scripts": {
    "postinstall": "install-app-deps",
    "build": "gulp build",
    "prerelease": "gulp build --env=production",
    "release": "build --ia32",
    "start": "gulp start",
    "pretest": "gulp build-unit --env=test",
    "test": "electron-mocha app/specs.js.autogenerated --renderer --require source-map-support/register",
    "coverage": "npm test -- -R scripts/istanbul-reporter",
    "pree2e": "gulp build-e2e --env=test",
    "e2e": "mocha app/e2e.js.autogenerated --require source-map-support/register"
  },
  "dependencies": {
    "angular": "1.5.1",
    "angular-ui-router": "^0.4.2",
    "bindings": "^1.2.1",
    "ffi": "^2.0",
    "font-awesome": "^4.7.0",
    "fs-jetpack": "^0.10.2",
    "ref": "^1.0",
    "ref-array": "^1.2.0",
    "ref-wchar": "^1.0",
    "ui-router-extras": "^0.1.3"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "electron": "^1.4.7",
    "electron-builder": "^8.6.0",
    "electron-mocha": "^3.0.0",
    "gulp": "^3.9.0",
    "gulp-batch": "^1.0.5",
    "gulp-livereload": "^3.8.1",
    "gulp-plumber": "^1.1.0",
    "gulp-sass": "^3.1.0",
    "gulp-util": "^3.0.6",
    "gulp-wait": "0.0.2",
    "gulp-watch": "^4.3.5",
    "istanbul": "^0.4.3",
    "minimist": "^1.2.0",
    "mocha": "^3.0.2",
    "rollup": "^0.36.3",
    "rollup-plugin-istanbul": "^1.1.0",
    "source-map-support": "^0.4.2",
    "spectron": "^3.3.0"
  }
}
